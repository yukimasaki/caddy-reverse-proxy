# Vaultwarden
{$VW_DOMAIN}:443 {
  log {
    level INFO
    output file {$VW_LOG} {
      roll_size 10MB
      roll_keep 10
    }
  }
  tls {$VW_EMAIL}
  encode gzip
  reverse_proxy /notifications/hub vaultwarden-container:3012
  reverse_proxy vaultwarden-container:80 {
    header_up X-Real-IP {remote_host}
  }
}

# Techblog (WordPress)
{$WP1_DOMAIN}:443 {
  log {
    level INFO
    output file {$WP1_LOG} {
      roll_size 10MB
      roll_keep 10
    }
  }
  tls {$WP1_EMAIL}
  encode gzip
  reverse_proxy wp-techmaro-container:80 {
    header_up X-Real-IP {remote_host}
  }
}

# QNAP
{$NAS_DOMAIN}:443 {
  log {
    level INFO
    output file {$NAS_LOG} {
      roll_size 10MB
      roll_keep 10
    }
  }
  tls {$NAS_EMAIL}
  encode gzip
  reverse_proxy 192.168.93.100:8080 {
    header_up X-Real-IP {remote_host}
  }
}